<%- include("partials/header") %>

<!-- viewOrderDetails.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Order | Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
  <div class="min-h-screen flex flex-col">
    <!-- Main content -->
    <div class="container mx-auto px-6 py-8 flex-grow">
      <!-- Breadcrumbs -->
      <nav class="flex mb-6" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
          <li class="inline-flex items-center">
            <a href="/dashboard" class="inline-flex items-center text-sm text-indigo-600 hover:text-indigo-800">
              <i class="fas fa-home mr-2"></i>
              Dashboard
            </a>
          </li>
          <li>
            <div class="flex items-center">
              <i class="fas fa-chevron-right text-gray-400 mx-2 text-xs"></i>
              <a href="/orders" class="text-sm text-indigo-600 hover:text-indigo-800">Orders</a>
            </div>
          </li>
          <li aria-current="page">
            <div class="flex items-center">
              <i class="fas fa-chevron-right text-gray-400 mx-2 text-xs"></i>
              <span class="text-sm text-gray-500">Order #<%= orderId %></span>
            </div>
          </li>
        </ol>
      </nav>

      <!-- Order Header -->
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-gray-800">Order #<%= orderId %></h2>
      </div>

      <!-- Order Status and Timeline -->
      <div class="bg-white rounded-lg shadow-md overflow-hidden mb-6">
        <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
          <h3 class="text-xl font-semibold text-gray-800"><%= order.status %></h3>
        </div>
        <div class="p-6">
          <div class="flex justify-between items-center mb-4">
            <div>
              <span class="text-sm text-gray-500">Order ID:</span>
              <span class="ml-2 font-semibold text-gray-800">#<%= orderId %></span>
            </div>
            <div class="flex items-center">
              <span class="text-sm text-gray-500 mr-2">Item Status:</span>
              <% 
                let statusColor;
                switch(orderItem.itemStatus) {
                  case 'pending':
                    statusColor = 'bg-yellow-100 text-yellow-800 border-yellow-300';
                    break;
                  case 'processing':
                    statusColor = 'bg-blue-100 text-blue-800 border-blue-300';
                    break;
                  case 'shipped':
                    statusColor = 'bg-indigo-100 text-indigo-800 border-indigo-300';
                    break;
                  case 'delivered':
                    statusColor = 'bg-green-100 text-green-800 border-green-300';
                    break;
                  case 'cancelled':
                    statusColor = 'bg-red-100 text-red-800 border-red-300';
                    break;
                  case 'return request':
                    statusColor = 'bg-purple-100 text-purple-800 border-purple-300';
                    break;
                  case 'returned':
                    statusColor = 'bg-purple-100 text-purple-800 border-purple-300';
                    break;
                  default:
                    statusColor = 'bg-gray-100 text-gray-800 border-gray-300';
                }
              %>
              <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full <%= statusColor %>">
                <%= orderItem.itemStatus %>
              </span>
            </div>
          </div>

          <!-- Order Timeline -->
          <div class="relative">
            <div class="absolute left-0 top-0 ml-4 h-full w-0.5 bg-gray-200"></div>
            <div class="space-y-8 relative">
              <% 
                const allStatuses = ['pending', 'processing', 'shipped', 'delivered'];
                const statusIndex = allStatuses.indexOf(orderItem.itemStatus);
                allStatuses.forEach((status, index) => {
                  const isPast = index <= statusIndex;
                  const isCurrent = index === statusIndex;
              %>
              <div class="relative">
                <div class="absolute left-0 top-0 flex items-center justify-center w-8 h-8 rounded-full 
                  <%= isPast ? 'bg-green-500' : 'bg-gray-200' %> text-white">
                  <% if (isPast && !isCurrent) { %>
                    <i class="fas fa-check text-xs"></i>
                  <% } else if (isCurrent) { %>
                    <div class="w-3 h-3 bg-white rounded-full"></div>
                  <% } %>
                </div>
                <div class="ml-12">
                  <h4 class="text-lg font-medium <%= isPast ? 'text-gray-800' : 'text-gray-500' %>">
                    <%= status.charAt(0).toUpperCase() + status.slice(1) %>
                  </h4>
                  <p class="text-sm text-gray-500">
                    <% 
                      if (isPast) {
                        if (status === 'pending') { %>
                          Order placed on <%= order.orderDate %>
                        <% } else if (status === 'processing') { %>
                          Order processing started
                        <% } else if (status === 'shipped') { %>
                          Order shipped <%= order.trackingNumber ? 'with tracking number ' + order.trackingNumber : '' %>
                        <% } else if (status === 'delivered') { %>
                          Order delivered on <%= order.actualDelivery ? order.actualDelivery.toLocaleDateString('en-US') : 'N/A' %>
                        <% }
                      } else { %>
                        Awaiting
                      <% } %>
                  </p>
                </div>
              </div>
              <% }); %>
              
              <!-- If order item is cancelled or return requested -->
              <% if (orderItem.itemStatus === 'cancelled' || orderItem.itemStatus === 'return request' || orderItem.itemStatus === 'returned') { %>
              <div class="relative">
                <div class="absolute left-0 top-0 flex items-center justify-center w-8 h-8 rounded-full 
                  <%= orderItem.itemStatus === 'cancelled' ? 'bg-red-500' : 'bg-purple-500' %> text-white">
                  <% if (orderItem.itemStatus === 'cancelled') { %>
                    <i class="fas fa-times text-xs"></i>
                  <% } else { %>
                    <i class="fas fa-undo text-xs"></i>
                  <% } %>
                </div>
                <div class="ml-12">
                  <h4 class="text-lg font-medium text-gray-800">
                    <%= orderItem.itemStatus.charAt(0).toUpperCase() + orderItem.itemStatus.slice(1) %>
                  </h4>
                  <p class="text-sm text-gray-500">
                    <% if (orderItem.itemStatus === 'cancelled') { %>
                      Order cancelled <%= order.cancelReason ? 'due to ' + order.cancelReason : '' %>
                    <% } else if (orderItem.itemStatus === 'return request' || orderItem.itemStatus === 'returned') { %>
                      <%= orderItem.itemStatus === 'return request' ? 'Return requested' : 'Returned' %> on <%= orderItem.returnRequestDate ? orderItem.returnRequestDate.toLocaleDateString('en-US') : 'N/A' %> <%= orderItem.reason ? 'for reason: ' + orderItem.reason : '' %>
                    <% } %>
                  </p>
                </div>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Order Items -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-lg shadow-md overflow-hidden mb-6">
            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
              <h3 class="text-xl font-semibold text-gray-800">Order Item</h3>
            </div>
            <div class="overflow-x-auto">
              <table class="w-full">
                <thead class="bg-gray-100">
                  <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                  <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex items-center">
                        <div class="flex-shrink-0 h-14 w-14 bg-gray-100 rounded">
                          <img class="h-14 w-14 rounded object-cover" src="<%= orderItem.productId.images[0] %>" alt="<%= orderItem.productId.name %>">
                        </div>
                        <div class="ml-4">
                          <div class="text-sm font-medium text-gray-900"><%= orderItem.productId.name %></div>
                          <div class="text-sm text-gray-500"><%= orderItem.volume %></div>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">#<%= productId %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= orderItem.quantity %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">₹<%= Math.round(orderItem.itemSalePrice.toFixed(2)) %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">₹<%= Math.round((orderItem.itemSalePrice * orderItem.quantity).toFixed(2)) %></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <div class="lg:col-span-1 space-y-6">
          <!-- Payment Information -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
              <h3 class="text-xl font-semibold text-gray-800">Payment Information</h3>
            </div>
            <div class="p-6 space-y-4">
              <div class="flex justify-between">
                <span class="text-gray-600">Payment Method:</span>
                <span class="font-medium text-gray-800">
                  <% if (order.paymentMethod === 'razorpay') { %>
                    <i class="fas fa-credit-card mr-1 text-indigo-600"></i> Online Payment
                  <% } else if (order.paymentMethod === 'wallet') { %>
                    <i class="fas fa-wallet mr-1 text-blue-600"></i> Wallet
                  <% } else { %>
                    <i class="fas fa-money-bill mr-1 text-green-600"></i> <%= order.paymentMethod.charAt(0).toUpperCase() + order.paymentMethod.slice(1) %>
                  <% } %>
                </span>
              </div>
              <div class="border-t border-gray-200 pt-4">
                <div class="flex justify-between">
                  <span class="text-gray-600">Subtotal:</span>
                  <span class="font-medium text-gray-800">₹<%= subtotal %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Offer Discount:</span>
                  <span class="font-medium text-green-600">-₹<%= offerDiscount %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Coupon Discount:</span>
                  <span class="font-medium text-green-600">-₹<%= couponDiscount %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Shipping:</span>
                  <span class="font-medium text-gray-800">+₹<%= shipping %></span>
                </div>
                <div class="flex justify-between pt-4 border-t border-gray-200 mt-4">
                  <span class="text-lg font-semibold text-gray-800">Total:</span>
                  <span class="text-lg font-bold text-indigo-600">₹<%= totalAmount %></span>
                </div>
              </div>
            </div>
          </div>

          <!-- Customer Information -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
              <h3 class="text-xl font-semibold text-gray-800">Customer Information</h3>
            </div>
            <div class="p-6 space-y-4">
              <div>
                <h4 class="text-md font-semibold text-gray-700 mb-2">Customer Details</h4>
                <div class="flex items-center mb-2">
                  <img src="<%= order.userId.image || '/images/default-user.png' %>" alt="<%= order.address.name %>" class="w-8 h-8 rounded-full mr-2">
                  <span class="font-medium text-gray-800"><%= order.address.name %></span>
                </div>
                <div class="space-y-1 text-sm text-gray-600 pl-10">
                  <div class="flex items-center">
                    <i class="fas fa-envelope w-4 text-gray-400 mr-2"></i>
                    <span><%= order.userId.email %></span>
                  </div>
                  <div class="flex items-center">
                    <i class="fas fa-phone w-4 text-gray-400 mr-2"></i>
                    <span><%= order.userId.phoneNumber || order.address.mobile %></span>
                  </div>
                </div>
              </div>
              <div class="border-t border-gray-200 pt-4">
                <h4 class="text-md font-semibold text-gray-700 mb-2">Shipping Address</h4>
                <div class="text-sm text-gray-600">
                  <div class="mb-1"><%= order.address.name %></div>
                  <div class="mb-1"><%= order.address.address %></div>
                  <div class="mb-1"><%= order.address.pincode %></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include("partials/footer") %>
  </div>
</body>
</html>