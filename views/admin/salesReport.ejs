<%- include("partials/header") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales Report - Aromatique</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .card-hover {
            transition: all 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }
        .metric-card {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }
        .metric-card-blue {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        }
        .metric-card-green {
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        }
        .metric-card-purple {
            background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        }
        .metric-card-orange {
            background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
        }
        .metric-card-teal {
            background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
        }
        .metric-card-indigo {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
    </style>
</head>
<body class="bg-gray-50 font-sans">
    <!-- Header Section -->
    <div class="gradient-bg text-white py-8 mb-8">
        <div class="container mx-auto px-4">
            <div class="text-center">
                <h1 class="text-4xl font-bold mb-2">
                    <i class="fas fa-chart-line mr-3"></i>Sales Analytics Dashboard
                </h1>
                <p class="text-xl opacity-90">Comprehensive Sales Performance Report</p>
            </div>
        </div>
    </div>

    <div class="container mx-auto px-4 pb-8">
        <!-- Filters Section -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8 card-hover">
            <div class="flex items-center mb-4">
                <i class="fas fa-filter text-blue-600 text-xl mr-3"></i>
                <h2 class="text-2xl font-bold text-gray-800">Report Filters</h2>
            </div>
            <form id="reportFilterForm" action="/salesReport" method="GET">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                    <div>
                        <label for="reportType" class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-calendar-alt mr-2"></i>Report Type
                        </label>
                        <select id="reportType" name="reportType" class="w-full p-3 border-2 border-gray-200 rounded-lg focus:border-blue-500 focus:outline-none transition-colors">
                            <option value="daily" <%= reportType === 'daily' ? 'selected' : '' %>>Daily Report</option>
                            <option value="weekly" <%= reportType === 'weekly' ? 'selected' : '' %>>Weekly Report</option>
                            <option value="yearly" <%= reportType === 'yearly' ? 'selected' : '' %>>Yearly Report</option>
                            <option value="custom" <%= reportType === 'custom' ? 'selected' : '' %>>Custom Range</option>
                        </select>
                    </div>
                    <div id="customDateRange" class="<%= reportType === 'custom' ? '' : 'hidden' %>">
                        <label for="dateFrom" class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-calendar-day mr-2"></i>From Date
                        </label>
                        <input type="date" id="dateFrom" name="dateFrom" value="<%= dateFrom %>" 
                               class="w-full p-3 border-2 border-gray-200 rounded-lg focus:border-blue-500 focus:outline-none transition-colors">
                    </div>
                    <div id="customDateTo" class="<%= reportType === 'custom' ? '' : 'hidden' %>">
                        <label for="dateTo" class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-calendar-check mr-2"></i>To Date
                        </label>
                        <input type="date" id="dateTo" name="dateTo" value="<%= dateTo %>" 
                               class="w-full p-3 border-2 border-gray-200 rounded-lg focus:border-blue-500 focus:outline-none transition-colors">
                    </div>
                    <div class="flex items-end">
                        <button type="submit" class="w-full bg-gradient-to-r from-blue-600 to-purple-600 text-white px-6 py-3 rounded-lg font-semibold hover:from-blue-700 hover:to-purple-700 transition-all duration-300 transform hover:scale-105">
                            <i class="fas fa-search mr-2"></i>Generate Report
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Report Summary Cards -->
        <div class="mb-8">
            <div class="flex items-center mb-6">
                <i class="fas fa-chart-bar text-green-600 text-2xl mr-3"></i>
                <h2 class="text-2xl font-bold text-gray-800"><%= dateLabel %></h2>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                <!-- Total Orders -->
                <div class="metric-card text-white p-6 rounded-xl shadow-lg card-hover">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm opacity-90 font-medium">Total Orders</p>
                            <p class="text-3xl font-bold"><%= report.totalOrders %></p>
                        </div>
                        <div class="bg-white bg-opacity-20 p-3 rounded-full">
                            <i class="fas fa-shopping-cart text-2xl"></i>
                        </div>
                    </div>
                </div>

                <!-- Total Sales -->
                <div class="metric-card-blue text-white p-6 rounded-xl shadow-lg card-hover">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm opacity-90 font-medium">Total Sales</p>
                            <p class="text-3xl font-bold">₹<%= report.totalAmount.toFixed(2) %></p>
                        </div>
                        <div class="bg-white bg-opacity-20 p-3 rounded-full">
                            <i class="fas fa-rupee-sign text-2xl"></i>
                        </div>
                    </div>
                </div>

                <!-- Total Discount -->
                <div class="metric-card-green text-white p-6 rounded-xl shadow-lg card-hover">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm opacity-90 font-medium">Total Discount</p>
                            <p class="text-3xl font-bold">₹<%= report.totalDiscount.toFixed(2) %></p>
                        </div>
                        <div class="bg-white bg-opacity-20 p-3 rounded-full">
                            <i class="fas fa-percentage text-2xl"></i>
                        </div>
                    </div>
                </div>

                <!-- Total Shipping -->
                <div class="metric-card-purple text-white p-6 rounded-xl shadow-lg card-hover">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm opacity-90 font-medium">Total Shipping</p>
                            <p class="text-3xl font-bold">₹<%= report.totalShipping.toFixed(2) %></p>
                        </div>
                        <div class="bg-white bg-opacity-20 p-3 rounded-full">
                            <i class="fas fa-truck text-2xl"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Discount Breakdown -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <div class="metric-card-orange text-white p-6 rounded-xl shadow-lg card-hover">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm opacity-90 font-medium">Offer Discount</p>
                            <p class="text-2xl font-bold">₹<%= report.totalOfferDiscount.toFixed(2) %></p>
                        </div>
                        <div class="bg-white bg-opacity-20 p-3 rounded-full">
                            <i class="fas fa-tags text-xl"></i>
                        </div>
                    </div>
                </div>

                <div class="metric-card-teal text-white p-6 rounded-xl shadow-lg card-hover">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm opacity-90 font-medium">System Discount</p>
                            <p class="text-2xl font-bold">₹<%= report.totalSystemDiscount.toFixed(2) %></p>
                        </div>
                        <div class="bg-white bg-opacity-20 p-3 rounded-full">
                            <i class="fas fa-cog text-xl"></i>
                        </div>
                    </div>
                </div>

                <div class="metric-card-indigo text-white p-6 rounded-xl shadow-lg card-hover">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm opacity-90 font-medium">Coupon Discount</p>
                            <p class="text-2xl font-bold">₹<%= report.totalCouponDiscount.toFixed(2) %></p>
                        </div>
                        <div class="bg-white bg-opacity-20 p-3 rounded-full">
                            <i class="fas fa-ticket-alt text-xl"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
            <!-- Sales Overview Chart -->
            <div class="bg-white rounded-xl shadow-lg p-6 card-hover">
                <div class="flex items-center mb-4">
                    <i class="fas fa-chart-pie text-blue-600 text-xl mr-3"></i>
                    <h3 class="text-xl font-bold text-gray-800">Sales Overview</h3>
                </div>
                <div class="h-64">
                    <canvas id="salesOverviewChart"></canvas>
                </div>
            </div>

            <!-- Discount Breakdown Chart -->
            <div class="bg-white rounded-xl shadow-lg p-6 card-hover">
                <div class="flex items-center mb-4">
                    <i class="fas fa-chart-donut text-green-600 text-xl mr-3"></i>
                    <h3 class="text-xl font-bold text-gray-800">Discount Breakdown</h3>
                </div>
                <div class="h-64">
                    <canvas id="discountChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Download Section -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8 card-hover">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <i class="fas fa-download text-purple-600 text-xl mr-3"></i>
                    <h3 class="text-xl font-bold text-gray-800">Export Reports</h3>
                </div>
                <div class="flex space-x-4">
                    <button onclick="downloadReport('pdf')" class="bg-gradient-to-r from-red-500 to-red-600 text-white px-6 py-3 rounded-lg font-semibold hover:from-red-600 hover:to-red-700 transition-all duration-300 transform hover:scale-105">
                        <i class="fas fa-file-pdf mr-2"></i>Download PDF
                    </button>
                    <button onclick="downloadReport('excel')" class="bg-gradient-to-r from-green-500 to-green-600 text-white px-6 py-3 rounded-lg font-semibold hover:from-green-600 hover:to-green-700 transition-all duration-300 transform hover:scale-105">
                        <i class="fas fa-file-excel mr-2"></i>Download Excel
                    </button>
                </div>
            </div>
        </div>

        <!-- Order Details Table -->
        <div class="bg-white rounded-xl shadow-lg p-6 card-hover">
            <div class="flex items-center mb-6">
                <i class="fas fa-list-alt text-indigo-600 text-xl mr-3"></i>
                <h2 class="text-2xl font-bold text-gray-800">Order Details</h2>
            </div>
            <% if (report.orders && report.orders.length > 0) { %>
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead>
                            <tr class="bg-gradient-to-r from-gray-50 to-gray-100">
                                <th class="px-6 py-4 text-left text-sm font-bold text-gray-700 uppercase tracking-wider">
                                    <i class="fas fa-hashtag mr-2"></i>Order ID
                                </th>
                                <th class="px-6 py-4 text-left text-sm font-bold text-gray-700 uppercase tracking-wider">
                                    <i class="fas fa-user mr-2"></i>Customer
                                </th>
                                <th class="px-6 py-4 text-left text-sm font-bold text-gray-700 uppercase tracking-wider">
                                    <i class="fas fa-rupee-sign mr-2"></i>Total
                                </th>
                                <th class="px-6 py-4 text-left text-sm font-bold text-gray-700 uppercase tracking-wider">
                                    <i class="fas fa-ticket-alt mr-2"></i>Coupon
                                </th>
                                <th class="px-6 py-4 text-left text-sm font-bold text-gray-700 uppercase tracking-wider">
                                    <i class="fas fa-info-circle mr-2"></i>Status
                                </th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200">
                            <% report.orders.forEach((order, index) => { %>
                                <tr class="hover:bg-gray-50 transition-colors duration-200">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                        #<%= order.orderId %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                        <div class="flex items-center">
                                            <div class="w-8 h-8 bg-gradient-to-r from-blue-400 to-purple-500 rounded-full flex items-center justify-center text-white font-bold text-xs mr-3">
                                                <%= order.userId.fullname.charAt(0).toUpperCase() %>
                                            </div>
                                            <%= order.userId.fullname %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-green-600">
                                        ₹<%= order.total.toFixed(2) %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                        <% if (order.couponUsed && order.couponUsed !== 'None') { %>
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                <i class="fas fa-check-circle mr-1"></i><%= order.couponUsed %>
                                            </span>
                                        <% } else { %>
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                                <i class="fas fa-minus-circle mr-1"></i>None
                                            </span>
                                        <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                                            <% if (order.status === 'Delivered') { %>bg-green-100 text-green-800<% } 
                                               else if (order.status === 'Pending') { %>bg-yellow-100 text-yellow-800<% } 
                                               else if (order.status === 'Cancelled') { %>bg-red-100 text-red-800<% } 
                                               else { %>bg-blue-100 text-blue-800<% } %>">
                                            <% if (order.status === 'Delivered') { %>
                                                <i class="fas fa-check-circle mr-1"></i>
                                            <% } else if (order.status === 'Pending') { %>
                                                <i class="fas fa-clock mr-1"></i>
                                            <% } else if (order.status === 'Cancelled') { %>
                                                <i class="fas fa-times-circle mr-1"></i>
                                            <% } else { %>
                                                <i class="fas fa-info-circle mr-1"></i>
                                            <% } %>
                                            <%= order.status %>
                                        </span>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="text-center py-12">
                    <i class="fas fa-inbox text-6xl text-gray-300 mb-4"></i>
                    <p class="text-xl text-gray-500 font-medium">No orders found for the selected period</p>
                    <p class="text-gray-400 mt-2">Try adjusting your filter criteria</p>
                </div>
            <% } %>
        </div>
    </div>

    <script>
        // Show/hide custom date range fields based on report type
        $('#reportType').on('change', function() {
            const isCustom = $(this).val() === 'custom';
            $('#customDateRange').toggleClass('hidden', !isCustom);
            $('#customDateTo').toggleClass('hidden', !isCustom);
            if (!isCustom) {
                $('#dateFrom').val('');
                $('#dateTo').val('');
            }
        });

        // Download report function
        function downloadReport(format) {
            const reportType = $('#reportType').val();
            const dateFrom = $('#dateFrom').val();
            const dateTo = $('#dateTo').val();
            const url = `/salesReport/download?reportType=${reportType}&dateFrom=${dateFrom}&dateTo=${dateTo}&format=${format}`;
            window.location.href = url;
        }

        // Chart.js configurations
        const chartOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        padding: 20,
                        usePointStyle: true,
                    }
                }
            }
        };

        // Sales Overview Chart
        const salesCtx = document.getElementById('salesOverviewChart').getContext('2d');
        new Chart(salesCtx, {
            type: 'doughnut',
            data: {
                labels: ['Total Sales', 'Total Discount', 'Shipping'],
                datasets: [{
                    data: [
                        <%= report.totalAmount %>,
                        <%= report.totalDiscount %>,
                        <%= report.totalShipping %>
                    ],
                    backgroundColor: [
                        'rgba(79, 172, 254, 0.8)',
                        'rgba(67, 233, 123, 0.8)',
                        'rgba(250, 112, 154, 0.8)'
                    ],
                    borderColor: [
                        'rgba(79, 172, 254, 1)',
                        'rgba(67, 233, 123, 1)',
                        'rgba(250, 112, 154, 1)'
                    ],
                    borderWidth: 2
                }]
            },
            options: chartOptions
        });

        // Discount Breakdown Chart
        const discountCtx = document.getElementById('discountChart').getContext('2d');
        new Chart(discountCtx, {
            type: 'pie',
            data: {
                labels: ['Offer Discount', 'System Discount', 'Coupon Discount'],
                datasets: [{
                    data: [
                        <%= report.totalOfferDiscount %>,
                        <%= report.totalSystemDiscount %>,
                        <%= report.totalCouponDiscount %>
                    ],
                    backgroundColor: [
                        'rgba(255, 154, 158, 0.8)',
                        'rgba(168, 237, 234, 0.8)',
                        'rgba(102, 126, 234, 0.8)'
                    ],
                    borderColor: [
                        'rgba(255, 154, 158, 1)',
                        'rgba(168, 237, 234, 1)',
                        'rgba(102, 126, 234, 1)'
                    ],
                    borderWidth: 2
                }]
            },
            options: chartOptions
        });

        // Add smooth scrolling for better UX
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
</body>
</html>
