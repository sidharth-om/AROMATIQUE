<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Address</title>
  <script src="https://cdn.tailwindcss.com"></script>
  
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">
  <div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">Edit Address</h2>
    
    <!-- Assuming you're passing a single address object to this template -->
     
    <form action="" method="POST" class="space-y-4" id="updateAddress">
      <% address.forEach(addr=>{ %>
      <!-- Hidden Address ID -->
      <input type="hidden" name="addressId" value="<%= address._id %>" />
      
      
      <!-- Full Name -->
      <div>
        <label for="fullName" class="block text-gray-700 mb-1 font-medium">Full Name</label>
        <input type="text" id="fullName" name="fullName" required
               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
               value="<%= addr.name%>" />
      </div>
      
      <!-- Full Address -->
      <div>
        <label for="fullAddress" class="block text-gray-700 mb-1 font-medium">Full Address</label>
        <textarea id="fullAddress" name="fullAddress" rows="3" required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"><%= addr.address %></textarea>
      </div>
      
      <!-- Phone Number -->
      <div>
        <label for="phoneNumber" class="block text-gray-700 mb-1 font-medium">Phone Number</label>
        <input type="tel" id="phoneNumber" name="phone" required
               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
               value="<%= addr.phoneNumber || '' %>" />
      </div>
      
      <!-- Pincode -->
      <div>
        <label for="pincode" class="block text-gray-700 mb-1 font-medium">Pincode</label>
        <input type="text" id="pincode" name="pincode" required
               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
               value="<%= addr.pincode || '' %>" />
      </div>
      
      <!-- Submit Button -->
      <div class="pt-4">
        <button type="submit"
                class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-300">
          Save Changes
        </button>
      </div>
      <% }) %>
    </form>
  </div>
</body>
</html>

