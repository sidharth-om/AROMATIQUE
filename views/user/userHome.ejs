<%- include("partials/header") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Essence | Premium Perfume Collection</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        perfume: {
                            50: '#fdf8f9',
                            100: '#f9e8ed',
                            200: '#f5d0db',
                            300: '#eaadbf',
                            400: '#e08aa3',
                            500: '#d56787',
                            600: '#c4446e',
                            700: '#a32e59',
                            800: '#86294a',
                            900: '#70263f',
                        },
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                        serif: ['Playfair Display', 'serif'],
                    },
                },
            },
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-50 font-sans text-gray-800 antialiased">

    <!-- Hero Section -->
    <section class="relative w-full h-[90vh] overflow-hidden">
        <img src="/uploads/userhomemainimage.jpg" alt="Premium Perfume Collection" class="w-full h-full object-cover transition-transform duration-1000 ease-out scale-100 hover:scale-105">
        <div class="absolute inset-0 bg-gradient-to-r from-black/40 to-black/10 flex items-center justify-center">
            <div class="text-center px-4 max-w-4xl mx-auto">
                <h1 class="font-serif text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-6 drop-shadow-sm tracking-tight leading-tight">Discover Your Signature Scent</h1>
                <p class="text-xl md:text-2xl text-white/90 mb-10 max-w-2xl mx-auto drop-shadow-sm font-light">Exquisite fragrances crafted with the finest ingredients for the discerning individual</p>
                <a href="/user/shopping" class="bg-white/90 backdrop-blur-sm text-gray-900 hover:bg-white px-10 py-4 rounded-full font-medium transition-all duration-300 inline-block shadow-md hover:shadow-lg transform hover:-translate-y-1 text-lg">Explore Collection</a>
            </div>
        </div>
    </section>

    <!-- Flash Sale Section -->
    <section class="container mx-auto my-24 px-6">
        <div class="flex flex-col md:flex-row items-center justify-between mb-12">
            <h2 class="font-serif text-3xl md:text-4xl font-bold text-gray-800 relative pb-2 after:content-[''] after:absolute after:bottom-0 after:left-0 after:w-1/4 after:h-0.5 after:bg-perfume-400 after:rounded-full">Limited Offers</h2>
            <div class="mt-4 md:mt-0 flex items-center space-x-3 bg-perfume-50 px-5 py-3 rounded-full shadow-sm">
                <!-- <span class="text-perfume-700 font-medium">Ends in</span> -->
                <!-- <div class="flex space-x-1">
                    <span class="bg-perfume-100 text-perfume-800 px-3 py-1 rounded-lg font-mono">23</span>
                    <span class="text-gray-600 flex items-center">:</span>
                    <span class="bg-perfume-100 text-perfume-800 px-3 py-1 rounded-lg font-mono">59</span>
                    <span class="text-gray-600 flex items-center">:</span>
                    <span class="bg-perfume-100 text-perfume-800 px-3 py-1 rounded-lg font-mono">59</span>
                </div> -->
            </div>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
            <% products.forEach(product => { %>
                <div class="group">
                    <div class="bg-white rounded-2xl shadow-sm overflow-hidden hover:shadow-md transition-all duration-300 transform hover:-translate-y-1 border border-gray-100">
                        <a href="/user/productView/<%=product._id%>" class="block relative overflow-hidden">
                            <div class="absolute top-3 right-3 bg-perfume-500 text-white text-xs font-medium px-3 py-1 rounded-full z-10 shadow-sm">SALE</div>
                            <img src="<%=product.images[0]%>" class="w-full h-80 object-cover transition-transform duration-700 ease-out group-hover:scale-105" alt="<%= product.name %>">
                        </a>
                        <div class="p-6">
                            <h5 class="font-serif text-lg font-medium text-gray-800 mb-3 truncate group-hover:text-perfume-600 transition-colors"><%= product.name %></h5>
                            <div>
                                <% const variant = product.variants[0]; %>
                                <% const discountedPrice = variant.regularPrice - (variant.regularPrice * product.offer / 100); %>
                                
                                <% if (product.offer > 0) { %>
                                    <span class="text-sm line-through text-gray-400">₹<%= variant.regularPrice.toFixed(2) %></span>
                                    <span class="text-xl font-bold text-gray-900 ml-2">₹<%= Math.round(discountedPrice.toFixed(2)) %></span>
                                    <span class="text-sm text-perfume-600 ml-2 font-medium">(<%= product.offer %>% off)</span>
                                <% } else { %>
                                    <span class="text-xl font-bold text-gray-900">₹<%= variant.regularPrice.toFixed(2) %></span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </section>

    <!-- Brands Section -->
    <section class="bg-gradient-to-b from-white to-gray-50 py-24">
        <div class="container mx-auto px-6">
            <h2 class="font-serif text-3xl md:text-4xl font-bold text-gray-800 text-center mb-16 relative pb-3 after:content-[''] after:absolute after:bottom-0 after:left-1/2 after:-translate-x-1/2 after:w-20 after:h-0.5 after:bg-perfume-300 after:rounded-full">Luxury Brands</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
                <% brands.forEach(brand => { %>
                    <div class="bg-white rounded-2xl shadow-sm overflow-hidden hover:shadow-md transition-all duration-300 transform hover:-translate-y-1 border border-gray-100">
                        <a href="/user/shopping?brand=<%=brand.name %>" class="block">
                            <div class="h-44 flex items-center justify-center p-8 bg-gray-50">
                                <img src="<%= brand.image %>" class="h-full object-contain transition-transform duration-500 hover:scale-110" alt="<%= brand.name %>">
                            </div>
                            <div class="p-6 border-t border-gray-50">
                                <h5 class="font-serif text-lg font-medium text-gray-800 mb-2"><%= brand.name %></h5>
                                <p class="text-gray-500 text-sm line-clamp-2"><%= brand.description %></p>
                            </div>
                        </a>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Categories Section -->
    <section class="container mx-auto my-24 px-6">
        <h2 class="font-serif text-3xl md:text-4xl font-bold text-gray-800 text-center mb-16 relative pb-3 after:content-[''] after:absolute after:bottom-0 after:left-1/2 after:-translate-x-1/2 after:w-20 after:h-0.5 after:bg-perfume-300 after:rounded-full">Fragrance Collections</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
            <% categories.forEach(category => { %>
                <div class="relative group overflow-hidden rounded-2xl shadow-sm">
                    <a href="/user/shopping?category=<%= category.name %>">
                        <img src="<%= category.image %>" class="w-full h-80 object-cover transition-transform duration-700 ease-out group-hover:scale-110" alt="<%= category.name %>">
                        <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent flex items-end transition-opacity duration-300 group-hover:opacity-90">
                            <div class="w-full p-8 transform transition-transform duration-500 group-hover:translate-y-0 translate-y-4">
                                <h5 class="font-serif text-xl font-bold text-white w-full text-center"><%= category.name %></h5>
                                <div class="flex justify-center mt-4 opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                                    <span class="text-white text-sm bg-white/20 px-5 py-2 rounded-full backdrop-blur-sm">Discover</span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            <% }); %>
        </div>
    </section>

    <!-- New Arrivals Section -->
    <section class="bg-gradient-to-b from-white to-gray-50 py-24">
        <div class="container mx-auto px-6">
            <div class="flex flex-col md:flex-row items-center justify-between mb-12">
                <h2 class="font-serif text-3xl md:text-4xl font-bold text-gray-800 relative pb-2 after:content-[''] after:absolute after:bottom-0 after:left-0 after:w-1/4 after:h-0.5 after:bg-perfume-300 after:rounded-full">New Arrivals</h2>
                <a href="/user/shopping?sort=newest" class="mt-4 md:mt-0 text-gray-700 hover:text-perfume-600 font-medium flex items-center group transition-colors duration-300">
                    View All
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1 transform transition-transform duration-300 group-hover:translate-x-1" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                    </svg>
                </a>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
                <% products.forEach(product => { %>
                    <div class="bg-white rounded-2xl shadow-sm overflow-hidden hover:shadow-md transition-all duration-300 transform hover:-translate-y-1 border border-gray-100">
                        <a href="/user/productView/<%=product._id%>" class="block relative">
                            <div class="absolute top-3 left-3 bg-perfume-100 text-perfume-800 text-xs font-medium px-3 py-1 rounded-full z-10 shadow-sm">NEW</div>
                            <img src="<%= product.images[0] %>" class="w-full h-80 object-cover transition-transform duration-700 ease-out hover:scale-105" alt="<%= product.name %>">
                        </a>
                        <div class="p-6">
                            <h5 class="font-serif text-lg font-medium text-gray-800 mb-2 truncate hover:text-perfume-600 transition-colors"><%= product.name %></h5>
                            <div class="flex items-center mb-3">
                                <div class="flex text-amber-400">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                    </svg>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                    </svg>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                    </svg>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                    </svg>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                    </svg>
                                </div>
                                <span class="text-xs text-gray-500 ml-1">(5.0)</span>
                            </div>
                            <div>
                                <% const variant = product.variants[0]; %>
                                <% const discountedPrice = variant.regularPrice - (variant.regularPrice * product.offer / 100); %>
                                
                                <% if (product.offer > 0) { %>
                                    <span class="text-sm line-through text-gray-400">₹<%= variant.regularPrice.toFixed(2) %></span>
                                    <span class="text-xl font-bold text-gray-900 ml-2">₹<%= Math.round(discountedPrice.toFixed(2)) %></span>
                                    <span class="text-sm text-perfume-600 ml-2 font-medium">(<%= product.offer %>% off)</span>
                                <% } else { %>
                                    <span class="text-xl font-bold text-gray-900">₹<%= variant.regularPrice.toFixed(2) %></span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Newsletter Section -->
    <section class="bg-gradient-to-r from-perfume-50 to-white py-24">
        <div class="container mx-auto px-6">
            <div class="max-w-3xl mx-auto text-center">
                <h2 class="font-serif text-3xl md:text-4xl font-bold mb-6 text-gray-800">Join Our Fragrance Community</h2>
                <p class="text-gray-600 mb-10 text-lg">Subscribe to receive exclusive offers and be the first to discover our new arrivals</p>
                <form class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto">
                    <input type="email" placeholder="Your email address" class="flex-grow px-5 py-4 rounded-full focus:outline-none focus:ring-2 focus:ring-perfume-300 text-gray-800 shadow-sm border border-gray-100">
                    <button type="submit" class="bg-perfume-500 hover:bg-perfume-600 text-white px-8 py-4 rounded-full font-medium transition-all duration-300 shadow-sm hover:shadow-md transform hover:-translate-y-1">Subscribe</button>
                </form>
                <p class="text-gray-500 text-sm mt-4">We respect your privacy. Unsubscribe at any time.</p>
            </div>
        </div>
    </section>

    <!-- Trust Badges Section -->
    <section class="container mx-auto py-20 px-6">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
            <div class="flex flex-col items-center p-6 bg-white rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300 border border-gray-100">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-14 w-14 text-perfume-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <h3 class="font-serif font-medium text-lg mb-2">Fast Delivery</h3>
                <p class="text-gray-500 text-sm">Free shipping on orders over ₹999</p>
            </div>
            <div class="flex flex-col items-center p-6 bg-white rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300 border border-gray-100">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-14 w-14 text-perfume-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
                <h3 class="font-serif font-medium text-lg mb-2">Secure Payment</h3>
                <p class="text-gray-500 text-sm">100% secure payment</p>
            </div>
            <div class="flex flex-col items-center p-6 bg-white rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300 border border-gray-100">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-14 w-14 text-perfume-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                </svg>
                <h3 class="font-serif font-medium text-lg mb-2">Money-Back Guarantee</h3>
                <p class="text-gray-500 text-sm">30-day return policy</p>
            </div>
            <div class="flex flex-col items-center p-6 bg-white rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300 border border-gray-100">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-14 w-14 text-perfume-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <h3 class="font-serif font-medium text-lg mb-2">24/7 Support</h3>
                <p class="text-gray-500 text-sm">Dedicated support</p>
            </div>
        </div>
    </section>

</body>
</html>

<%- include("partials/footer") %>