<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Referral Program - Your Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .referral-hero {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 60px 0;
        }
        .referral-code-box {
            background: rgba(255, 255, 255, 0.1);
            border: 2px dashed rgba(255, 255, 255, 0.3);
            border-radius: 10px;
            padding: 20px;
            text-align: center;
        }
        .referral-code {
            font-size: 2rem;
            font-weight: bold;
            letter-spacing: 3px;
            color: #fff;
            background: rgba(0, 0, 0, 0.2);
            padding: 15px 25px;
            border-radius: 8px;
            display: inline-block;
            margin: 15px 0;
        }
        .stats-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            text-align: center;
            transition: transform 0.3s ease;
        }
        .stats-card:hover {
            transform: translateY(-5px);
        }
        .stats-number {
            font-size: 2.5rem;
            font-weight: bold;
            color: #667eea;
        }
        .coupon-card {
            background: white;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            border-left: 5px solid #28a745;
        }
        .coupon-code {
            background: #f8f9fa;
            padding: 8px 12px;
            border-radius: 6px;
            font-family: monospace;
            font-weight: bold;
            display: inline-block;
        }
        .share-button {
            background: linear-gradient(45deg, #667eea, #764ba2);
            border: none;
            color: white;
            padding: 12px 25px;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        .share-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
            color: white;
        }
        .copy-btn {
            background: #28a745;
            border: none;
            color: white;
            padding: 8px 15px;
            border-radius: 6px;
            margin-left: 10px;
            font-size: 0.9rem;
        }
        .copy-btn:hover {
            background: #218838;
            color: white;
        }
        .referred-user {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 10px;
            border-left: 4px solid #17a2b8;
        }
    </style>
</head>
<body style="background-color: #f5f6fa;">
    <!-- Navigation (include your existing navigation here) -->
    
    <!-- Referral Hero Section -->
    <section class="referral-hero">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 fw-bold mb-4">
                        <i class="fas fa-gift me-3"></i>Refer & Earn
                    </h1>
                    <p class="lead mb-4">Share your unique referral code with friends and earn amazing rewards when they make their first purchase!</p>
                    
                    <div class="referral-code-box">
                        <h5 class="mb-3">Your Referral Code</h5>
                        <div class="referral-code" id="referralCode"><%= userDetails.referralCode %></div>
                        <button class="btn copy-btn" onclick="copyReferralCode()">
                            <i class="fas fa-copy me-2"></i>Copy Code
                        </button>
                    </div>
                </div>
                <div class="col-lg-6 text-center">
                    <img src="/images/referral-illustration.png" alt="Referral Program" class="img-fluid" style="max-height: 400px;" onerror="this.style.display='none'">
                </div>
            </div>
        </div>
    </section>

    <!-- Statistics Section -->
    <section class="py-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="stats-card">
                        <div class="stats-number"><%= userDetails.referralCount || 0 %></div>
                        <h5 class="mt-2">Total Referrals</h5>
                        <p class="text-muted">Friends you've referred</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stats-card">
                        <div class="stats-number"><%= referralCoupons?.length %></div>
                        <h5 class="mt-2">Reward Coupons</h5>
                        <p class="text-muted">Coupons earned from referrals</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stats-card">
                        <div class="stats-number">‚Çπ<%= userDetails.referralEarnings || 0 %></div>
                        <h5 class="mt-2">Total Savings</h5>
                        <p class="text-muted">Amount saved through referrals</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- How It Works Section -->
    <section class="py-5 bg-white">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold">How It Works</h2>
                <p class="text-muted">Simple steps to start earning rewards</p>
            </div>
            
            <div class="row g-4">
                <div class="col-md-4 text-center">
                    <div class="mb-4">
                        <div class="d-inline-flex align-items-center justify-content-center bg-primary rounded-circle" style="width: 80px; height: 80px;">
                            <i class="fas fa-share-alt fa-2x text-white"></i>
                        </div>
                    </div>
                    <h5>1. Share Your Code</h5>
                    <p class="text-muted">Share your unique referral code with friends and family</p>
                </div>
                <div class="col-md-4 text-center">
                    <div class="mb-4">
                        <div class="d-inline-flex align-items-center justify-content-center bg-success rounded-circle" style="width: 80px; height: 80px;">
                            <i class="fas fa-user-plus fa-2x text-white"></i>
                        </div>
                    </div>
                    <h5>2. Friend Signs Up</h5>
                    <p class="text-muted">Your friend registers using your referral code</p>
                </div>
                <div class="col-md-4 text-center">
                    <div class="mb-4">
                        <div class="d-inline-flex align-items-center justify-content-center bg-warning rounded-circle" style="width: 80px; height: 80px;">
                            <i class="fas fa-gift fa-2x text-white"></i>
                        </div>
                    </div>
                    <h5>3. Get Rewards</h5>
                    <p class="text-muted">Receive a 10% discount coupon as a reward</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Share Section -->
    <section class="py-5">
        <div class="container">
            <div class="text-center mb-4">
                <h3 class="fw-bold">Share Your Code</h3>
                <p class="text-muted">Spread the word and start earning</p>
            </div>
            
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="d-flex flex-wrap justify-content-center gap-3">
                        <button class="btn share-button" onclick="shareWhatsApp()">
                            <i class="fab fa-whatsapp me-2"></i>WhatsApp
                        </button>
                        <button class="btn share-button" onclick="shareEmail()">
                            <i class="fas fa-envelope me-2"></i>Email
                        </button>
                        <button class="btn share-button" onclick="shareFacebook()">
                            <i class="fab fa-facebook-f me-2"></i>Facebook
                        </button>
                        <button class="btn share-button" onclick="shareTwitter()">
                            <i class="fab fa-twitter me-2"></i>Twitter
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Referral Coupons Section -->
    <% if ("referralCoupons" &&" referralCoupons.length" > 0) { %>
    <section class="py-5 bg-white">
        <div class="container">
            <h3 class="fw-bold mb-4">Your Referral Reward Coupons</h3>
            
            <div class="row">
                <% "referralCoupons".forEach(coupon => { %>
                <div class="col-md-6 mb-3">
                    <div class="coupon-card">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h6 class="mb-1">Referral Reward</h6>
                                <small class="text-muted">
                                    For referring: <%= coupon.referralDetails?.referredUser?.fullname || 'Unknown User' %>
                                </small>
                            </div>
                            <span class="badge bg-success">Active</span>
                        </div>
                        
                        <div class="mb-3">
                            <span class="coupon-code"><%= coupon.code %></span>
                            <button class="btn btn-sm btn-outline-primary ms-2" onclick="copyCouponCode('<%= coupon.code %>')">
                                <i class="fas fa-copy"></i>
                            </button>
                        </div>
                        
                        <div class="row text-center">
                            <div class="col-4">
                                <small class="text-muted d-block">Discount</small>
                                <strong><%= coupon.value %>%</strong>
                            </div>
                            <div class="col-4">
                                <small class="text-muted d-block">Min Order</small>
                                <strong>‚Çπ<%= coupon.minOrderAmount || coupon.minOrder %></strong>
                            </div>
                            <div class="col-4">
                                <small class="text-muted d-block">Expires</small>
                                <strong><%= new Date(coupon.expiryDate || coupon.endDate).toLocaleDateString() %></strong>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </section>
    <% } %>

    <!-- Referred Users Section -->
    <% if (userDetails.referredUsers && userDetails.referredUsers.length > 0) { %>
    <section class="py-5">
        <div class="container">
            <h3 class="fw-bold mb-4">Your Referrals</h3>
            
            <div class="row">
                <% userDetails.referredUsers.forEach(referral => { %>
                <div class="col-md-6 mb-3">
                    <div class="referred-user">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1"><%= referral.user?.fullname || 'Unknown User' %></h6>
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    Joined: <%= new Date(referral.dateReferred).toLocaleDateString() %>
                                </small>
                            </div>
                            <div class="text-end">
                                <span class="badge bg-success">
                                    <i class="fas fa-check me-1"></i>Active
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </section>
    <% } %>

    <!-- Footer (include your existing footer here) -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function copyReferralCode() {
            const referralCode = document.getElementById('referralCode').textContent;
            navigator.clipboard.writeText(referralCode).then(() => {
                showToast('Referral code copied to clipboard!');
            });
        }

        function copyCouponCode(code) {
            navigator.clipboard.writeText(code).then(() => {
                showToast('Coupon code copied to clipboard!');
            });
        }

        function shareWhatsApp() {
            const code = '<%= userDetails.referralCode %>';
            const message = `Hey! Join me on our favorite shopping platform using my referral code: ${code} and get amazing deals! üõçÔ∏è`;
            const url = `https://wa.me/?text=${encodeURIComponent(message)}`;
            window.open(url, '_blank');
        }

        function shareEmail() {
            const code = '<%= userDetails.referralCode %>';
            const subject = 'Join me and get exclusive discounts!';
            const body = `Hi there!\n\nI wanted to share an amazing shopping platform with you. Use my referral code: ${code} when you sign up to get exclusive deals and discounts!\n\nHappy shopping!`;
            const url = `mailto:?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
            window.location.href = url;
        }

        function shareFacebook() {
            const message = `Check out this amazing shopping platform! Use my referral code: <%= userDetails.referralCode %> for exclusive deals!`;
            const url = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(window.location.origin)}&quote=${encodeURIComponent(message)}`;
            window.open(url, '_blank');
        }

        function shareTwitter() {
            const message = `Join me on this awesome shopping platform! Use referral code: <%= userDetails.referralCode %> for exclusive deals! üõçÔ∏è #referral #shopping`;
            const url = `https://twitter.com/intent/tweet?text=${encodeURIComponent(message)}`;
            window.open(url, '_blank');
        }

        function showToast(message) {
            // Create a simple toast notification
            const toast = document.createElement('div');
            toast.className = 'position-fixed top-0 end-0 m-3 p-3 bg-success text-white rounded';
            toast.style.zIndex = '9999';
            toast.textContent = message;
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.remove();
            }, 3000);
        }
    </script>
</body>
</html>