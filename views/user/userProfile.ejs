          <li class="breadcrumb-item active" aria-current="page">Account</li>
        </ol>
      </nav>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container py-4">
    <div class="row g-4">
      <!-- Sidebar -->
      <div class="col-lg-3">
        <div class="dashboard-sidebar p-4">
          <h5 class="mb-4 fw-bold text-uppercase fs-6">My Account</h5>
