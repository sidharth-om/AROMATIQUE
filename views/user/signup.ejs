<!DOCTYPE html>
<html lang="en">
<head>  
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aromatique - Sign Up</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: { 
                extend: { 
                    colors: { 
                        primary: '#8B5CF6', 
                        secondary: '#4F46E5' 
                    }, 
                    fontFamily: { 
                        sans: ['Poppins', 'sans-serif'], 
                        serif: ['Playfair Display', 'serif'] 
                    } 
                } 
            }
        }
    </script>
    <style>
        .referral-valid {
            border-color: #10B981 !important;
            background-color: #F0FDF4;
        }
        .referral-invalid {
            border-color: #EF4444 !important;
            background-color: #FEF2F2;
        }
        .toast {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
            padding: 12px 20px;
            border-radius: 8px;
            color: white;
            font-weight: 500;
            transform: translateX(100%);
            transition: transform 0.3s ease;
        }
        .toast.show {
            transform: translateX(0);
        }
        .toast.success {
            background-color: #10B981;
        }
        .toast.error {
            background-color: #EF4444;
        }
        .loading-spinner {
            display: inline-block;
            width: 16px;
            height: 16px;
            border: 2px solid #ffffff40;
            border-radius: 50%;
            border-top-color: #ffffff;
            animation: spin 1s ease-in-out infinite;
        }
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
    </style>
</head>
<body class="bg-gray-50 font-sans flex items-center justify-center min-h-screen p-4">
    <div class="flex flex-col md:flex-row w-full max-w-4xl overflow-hidden rounded-2xl shadow-lg">
        <!-- Left Side - Branding -->
        <div class="w-full md:w-1/2 bg-gradient-to-br from-primary to-secondary text-white p-8 flex flex-col justify-center items-center text-center">
            <div class="mb-6">
                <i class="fas fa-spa text-5xl mb-4"></i>
                <h2 class="text-4xl font-serif font-bold mb-2">Aromatique</h2>
                <p class="text-lg opacity-90 mb-6">Discover your perfect scent</p>
            </div>
            
            <!-- Referral Benefits -->
            <div class="bg-white bg-opacity-10 rounded-lg p-4 backdrop-blur-sm">
                <h3 class="text-lg font-semibold mb-3">
                    <i class="fas fa-gift mr-2"></i>Join with a Referral Code
                </h3>
                <ul class="text-sm space-y-2 text-left">
                    <li><i class="fas fa-check mr-2"></i>Get exclusive welcome offers</li>
                    <li><i class="fas fa-check mr-2"></i>Help friends earn rewards</li>
                    <li><i class="fas fa-check mr-2"></i>Join our community of fragrance lovers</li>
                </ul>
            </div>
        </div>

        <!-- Right Side - Form -->
        <div class="w-full md:w-1/2 bg-white p-8">
            <div class="text-center mb-6">
                <h2 class="text-3xl font-bold text-gray-800">Create Account</h2>
                <p class="text-gray-600 mt-2">Join the Aromatique family today</p>
            </div>

            <form id="signupForm" class="space-y-4">
                <!-- Full Name -->
                <div>
                    <input type="text" 
                           id="fullname" 
                           name="fullname" 
                           placeholder="Full Name" 
                           class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
                           required>
                </div>

                <!-- Email -->
                <div>
                    <input type="email" 
                           id="email" 
                           name="email" 
                           placeholder="Email Address" 
                           class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
                           required>
                </div>

                <!-- Phone -->
                <div>
                    <input type="tel" 
                           id="phone" 
                           name="phone" 
                           placeholder="Phone Number" 
                           class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
                           required>
                </div>

                <!-- Referral Code (Optional) -->
                <div class="relative">
                    <div class="flex items-center">
                        <input type="text" 
                               id="referralCode" 
                               name="referralCode" 
                               placeholder="Referral Code (Optional)" 
                               class="w-full px-4 py-3 pr-12 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200 uppercase"
                               maxlength="8">
                        <button type="button" 
                                id="checkReferralBtn" 
                                class="absolute right-3 text-gray-400 hover:text-primary transition-colors duration-200"
                                onclick="checkReferralCode()"
                                style="display: none;">
                            <i class="fas fa-search"></i>
                        </button>
                        <div id="referralSpinner" class="absolute right-3" style="display: none;">
                            <div class="loading-spinner border-primary"></div>
                        </div>
                    </div>
                    <div id="referralMessage" class="mt-1 text-sm" style="display: none;"></div>
                </div>

                <!-- Password -->
                <div>
                    <input type="password" 
                           id="password" 
                           name="password" 
                           placeholder="Password" 
                           class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
                           required>
                </div>

                <!-- Confirm Password -->
                <div>
                    <input type="password" 
                           id="confirmPassword" 
                           name="confirmPassword" 
                           placeholder="Confirm Password" 
                           class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
                           required>
                </div>

                <!-- Submit Button -->
                <button type="submit" 
                        id="submitBtn"
                        class="w-full py-3 bg-gradient-to-r from-primary to-secondary hover:from-secondary hover:to-primary text-white rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none">
                    <span id="submitText">Create Account</span>
                    <div id="submitSpinner" class="loading-spinner" style="display: none;"></div>
                </button>
            </form>

            <!-- Sign In Link -->
            <p class="text-center text-sm mt-6 text-gray-600">
                Already have an account? 
                <a href="/user/userLogin" class="text-primary hover:text-secondary font-semibold transition-colors duration-200">
                    Sign In
                </a>
            </p>

            <!-- Referral Info -->
            <div class="mt-6 p-4 bg-gray-50 rounded-lg">
                <p class="text-xs text-gray-600 text-center">
                    <i class="fas fa-info-circle mr-1"></i>
                    Have a friend's referral code? Enter it above to get started with exclusive benefits!
                </p>
            </div>
        </div>
    </div>

    <script>
        let referralCheckTimeout;
        let isReferralValid = false;

        // Auto-check referral code as user types
        document.getElementById('referralCode').addEventListener('input', function(e) {
            const code = e.target.value.trim().toUpperCase();
            e.target.value = code;
            
            // Clear previous timeout
            clearTimeout(referralCheckTimeout);
            
            // Reset UI
            resetReferralUI();
            
            if (code.length >= 3) {
                document.getElementById('checkReferralBtn').style.display = 'block';
                
                // Auto-check after user stops typing for 1 second
                referralCheckTimeout = setTimeout(() => {
                    checkReferralCode();
                }, 1000);
            } else {
                document.getElementById('checkReferralBtn').style.display = 'none';
            }
        });
// Replace the checkReferralCode function in your signup form with this:

async function checkReferralCode() {
    const referralInput = document.getElementById('referralCode');
    const code = referralInput.value.trim();
    
    if (!code) return;

    // Show loading state
    document.getElementById('checkReferralBtn').style.display = 'none';
    document.getElementById('referralSpinner').style.display = 'block';

    try {
        console.log('Checking referral code:', code);
        
        // Use the correct endpoint that doesn't require authentication
        const response = await fetch('/user/validateReferralCode', {
            method: 'POST',
            headers: { 
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify({ referralCode: code })
        });

        console.log('Response status:', response.status);
        
        if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
        }

        const result = await response.json();
        console.log('Response result:', result);
        
        // The validateReferralCode endpoint returns different response format
        // Transform it to match your showReferralResult expectations
        const transformedResult = {
            valid: result.success,
            message: result.message,
            referrerName: result.referrerName
        };
        
        showReferralResult(transformedResult);
        
    } catch (error) {
        console.error('Error checking referral code:', error);
        showReferralResult({
            valid: false,
            message: 'Error checking referral code. Please try again.'
        });
    }

    // Hide loading state
    document.getElementById('referralSpinner').style.display = 'none';
    document.getElementById('checkReferralBtn').style.display = 'block';
}

        function showReferralResult(result) {
            const referralInput = document.getElementById('referralCode');
            const messageDiv = document.getElementById('referralMessage');
            
            messageDiv.style.display = 'block';
            isReferralValid = result.valid;
            
            if (result.valid) {
                referralInput.className = referralInput.className.replace(/referral-invalid/g, '') + ' referral-valid';
                messageDiv.innerHTML = `<i class="fas fa-check text-green-500 mr-1"></i><span class="text-green-600">${result.message}</span>`;
            } else {
                referralInput.className = referralInput.className.replace(/referral-valid/g, '') + ' referral-invalid';
                messageDiv.innerHTML = `<i class="fas fa-times text-red-500 mr-1"></i><span class="text-red-600">${result.message}</span>`;
            }
        }

        function resetReferralUI() {
            const referralInput = document.getElementById('referralCode');
            const messageDiv = document.getElementById('referralMessage');
            
            referralInput.className = referralInput.className.replace(/referral-valid|referral-invalid/g, '');
            messageDiv.style.display = 'none';
            isReferralValid = false;
        }

        function showToast(message, type = 'success') {
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check' : 'exclamation-triangle'} mr-2"></i>
                ${message}
            `;
            
            document.body.appendChild(toast);
            
            setTimeout(() => toast.classList.add('show'), 100);
            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => document.body.removeChild(toast), 300);
            }, 3000);
        }

        function setLoadingState(loading) {
            const submitBtn = document.getElementById('submitBtn');
            const submitText = document.getElementById('submitText');
            const submitSpinner = document.getElementById('submitSpinner');
            
            if (loading) {
                submitBtn.disabled = true;
                submitText.style.display = 'none';
                submitSpinner.style.display = 'inline-block';
            } else {
                submitBtn.disabled = false;
                submitText.style.display = 'inline';
                submitSpinner.style.display = 'none';
            }
        }

        document.getElementById("signupForm").addEventListener("submit", async function(event) {
            event.preventDefault();
            
            const formData = Object.fromEntries(new FormData(this).entries());
            const referralCode = formData.referralCode?.trim();
            
            // Validate referral code if provided
            if (referralCode && !isReferralValid) {
                showToast('Please enter a valid referral code or leave it empty', 'error');
                return;
            }
            
            setLoadingState(true);
            
            try {
                const response = await fetch("/user/verifyRegister", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(formData)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showToast('Account created successfully! Redirecting...', 'success');
                    setTimeout(() => {
                        window.location.href = result.redirectUrl;
                    }, 1500);
                } else {
                    showToast(result.message, 'error');
                }
            } catch (error) {
                showToast("An error occurred. Please try again.", 'error');
            } finally {
                setLoadingState(false);
            }
        });

        // Check for referral code in URL parameters
        window.addEventListener('DOMContentLoaded', function() {
            const urlParams = new URLSearchParams(window.location.search);
            const referralCode = urlParams.get('ref');
            
            if (referralCode) {
                document.getElementById('referralCode').value = referralCode.toUpperCase();
                checkReferralCode();
            }
        });
    </script>
</body>
</html>