<div class="container mx-auto px-4 py-8">
    <div class="border-b pb-4 mb-6">
        <h3 class="text-2xl font-bold text-gray-800">You May Also Like</h3>
    </div>
    
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <% relatedProduct.forEach(related => { %>
            <% 
                // Calculate highest offer for each related product
                let productOffer = related.offer || 0;
                let categoryOffer = 0;
                
                // Check if categoryId exists and is populated correctly
                if (related.categoryId && typeof related.categoryId === 'object' && related.categoryId.offer) {
                    categoryOffer = related.categoryId.offer;
                }
                
                // Determine the highest offer for this related product
                const relatedHighestOffer = Math.max(productOffer, categoryOffer);
                
                // Get regular price from first variant (if exists)
                const regularPrice = related.variants && related.variants.length > 0 ? related.variants[0].regularPrice : 0;
                
                // Calculate discounted price using the highest offer
                const discountedPrice = Math.round(regularPrice - (regularPrice * relatedHighestOffer / 100));
            %>
            <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition group">
                <a href="/user/productView/<%= related._id %>" class="block relative">
                    <% if(relatedHighestOffer > 0) { %>
                        <div class="absolute top-2 right-2 bg-red-500 text-white text-xs px-2 py-1 rounded">-<%= relatedHighestOffer %>%</div>
                    <% } %>
                    <img src="/uploads/<%= related.images[0] %>" class="w-full h-48 object-cover group-hover:scale-105 transition duration-300" alt="Related Product">
                    <div class="p-4">
                        <h5 class="font-medium text-gray-800 truncate"><%= related.name %></h5>
                        <div class="flex items-center mt-1">
                            <div class="flex text-yellow-400 text-xs">
