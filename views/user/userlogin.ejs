<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aromatique - Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'perfume-gold': '#D4AF37',
                        'perfume-dark': '#2C1810',
                        'perfume-cream': '#F5F1E8'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gradient-to-br from-perfume-cream to-white min-h-screen">
    <div class="flex justify-center items-center min-h-screen px-4">
        <div class="bg-white rounded-2xl shadow-2xl p-8 w-full max-w-md border border-gray-100">
            <!-- Added brand header with logo and name -->
            <div class="text-center mb-8">
                <div class="mb-4">
                    <img src="/uploads/logo.png" 
                         alt="Aromatique Logo" 
                         class="mx-auto w-20 h-20 object-contain">
                </div>
                <h1 class="text-3xl font-bold text-perfume-dark mb-2">Aromatique</h1>
                <p class="text-gray-600 text-sm">Luxury Perfumes & Fragrances</p>
            </div>

            <h2 class="text-center text-2xl font-semibold text-gray-800 mb-6">Welcome Back</h2>
            
            <form action="/login" method="POST" id="userLogin">
                <div class="mb-4">
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email:</label>
                    <input type="email" 
                           id="email" 
                           name="email" 
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-perfume-gold focus:border-transparent transition duration-200">
                </div>
                
                <div class="mb-6">
                    <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Password:</label>
                    <div class="relative">
                        <input type="password" 
                               id="password" 
                               name="password" 
                               class="w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg focus:ring-2 focus:ring-perfume-gold focus:border-transparent transition duration-200">
                        <span class="absolute right-3 top-1/2 transform -translate-y-1/2 cursor-pointer text-gray-500 hover:text-gray-700" 
                              id="togglePassword">
                            <i class="bi bi-eye" id="eyeIcon"></i>
                        </span>
                    </div>
                </div>
                
                <button type="submit" 
                        class="w-full bg-perfume-gold hover:bg-yellow-600 text-white font-semibold py-3 px-4 rounded-lg transition duration-200 transform hover:scale-105">
                    Login
                </button>
                
                <div class="text-right mt-3">
                    <a href="/forgotPassword" 
                       class="text-sm text-perfume-gold hover:text-yellow-600 transition duration-200">
                        Forgot Password?
                    </a>
                </div>
            </form>

            <div class="text-center my-6">
                <span class="text-gray-500 text-sm">or</span>
            </div>

            <!-- Google Sign-In Button -->
            <div id="g_id_onload"
                 data-client_id="142815468591-rc6ar61c1r1sd4sm1nsv0h5cos2r6hk6.apps.googleusercontent.com"
                 data-callback="handleGoogleLogin"
                 data-auto_prompt="false">
            </div>

            <div class="flex justify-center mb-6">
                <div class="g_id_signin"
                     data-type="standard"
                     data-theme="outline"
                     data-text="signin_with"
                     data-shape="rectangular"
                     data-logo_alignment="center">
                </div>
            </div>

            <p class="text-center text-sm text-gray-600">
                Don't have an account? 
                <a href="/signup" class="text-perfume-gold hover:text-yellow-600 font-medium transition duration-200">
                    Sign up
                </a>
            </p>
        </div>
    </div>

    <!-- SweetAlert2 CDN -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Handle Regular Login
        document.getElementById("userLogin").addEventListener("submit", async function(event) {
            event.preventDefault();
            const formData = Object.fromEntries(new FormData(this).entries());
            console.log(formData);

            try {
                const response = await fetch("/verifyLogin", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(formData)
                });
                const result = await response.json();

                if (result.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Login Successful',
                        showConfirmButton: false,
                        timer: 1500
                    }).then(() => {
                        window.location.href = result.redirectUrl;
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Login Failed',
                        text: result.message
                    });
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: "Something went wrong. Please try again."
                });
            }
        });

        // Handle Google Sign-In    
        async function handleGoogleLogin(response) {
            console.log("Google Login Response:", response);
            try {
                const res = await fetch("/googleLogin", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ token: response.credential })
                });

                const result = await res.json();

                if (result.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Google Login Successful',
                        showConfirmButton: false,
                        timer: 1500
                    }).then(() => {
                        window.location.href = result.redirectUrl;
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Google Login Failed',
                        text: result.message
                    });
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: "Something went wrong during Google login."
                });
            }
        }

        // Toggle Password Visibility
        document.getElementById('togglePassword').addEventListener('click', function () {
            const passwordInput = document.getElementById('password');
            const eyeIcon = document.getElementById('eyeIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.classList.remove('bi-eye');
                eyeIcon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                eyeIcon.classList.remove('bi-eye-slash');
                eyeIcon.classList.add('bi-eye');
            }
        });
    </script>
</body>
</html>
